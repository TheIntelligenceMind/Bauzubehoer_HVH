  </servlet>
  <servlet-mapping>
    <servlet-name>LogoutController</servlet-name>
    <url-pattern>/abmelden</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>RegistrationController</servlet-name>
    <servlet-class>controller.RegistrationController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RegistrationController</servlet-name>
    <url-pattern>/registrieren</url-pattern>
  </servlet-mapping>
   <servlet>
    <servlet-name>WarenkorbController</servlet-name>
    <servlet-class>controller.WarenkorbController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>WarenkorbController</servlet-name>
    <url-pattern>/warenkorb</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>BestellungenController</servlet-name>
    <servlet-class>controller.BestellungenController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>BestellungenController</servlet-name>
    <url-pattern>/meineBestellungen</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>KontoController</servlet-name>
    <servlet-class>controller.KontoController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>KontoController</servlet-name>
    <url-pattern>/meinKonto</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>SuchController</servlet-name>
    <servlet-class>controller.SuchController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>SuchController</servlet-name>
    <url-pattern>/suchen</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ArtikelController</servlet-name>
    <servlet-class>controller.ArtikelController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ArtikelController</servlet-name>
    <url-pattern>/artikel</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>BenutzerController</servlet-name>
