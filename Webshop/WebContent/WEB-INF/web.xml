  <servlet>
    <servlet-name>KontaktformularController</servlet-name>
    <servlet-class>controller.KontaktformularController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>KontaktformularController</servlet-name>
    <url-pattern>/kontakt</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ImpressumController</servlet-name>
    <servlet-class>controller.ImpressumController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ImpressumController</servlet-name>
    <url-pattern>/impressum</url-pattern>
  </servlet-mapping>
    <servlet>
    <servlet-name>UploadController</servlet-name>
    <servlet-class>controller.UploadController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UploadController</servlet-name>
    <url-pattern>/upload</url-pattern>
  </servlet-mapping>
   
   
   
   	<error-page>
    	<!-- Missing login -->
    	<error-code>401</error-code>
    	<location>/general-error.jsp</location>
	</error-page>
	<error-page>
    	<!-- Forbidden directory listing -->
    	<error-code>403</error-code>
    	<location>/general-error.jsp</location>
	</error-page>
	<error-page>
    	<!-- Missing resource -->
    	<error-code>404</error-code>
    	<location>/general-error.jsp</location>
	</error-page>
	<error-page>
    	<!-- Uncaught exception -->
    	<error-code>500</error-code>
    	<location>/general-error.jsp</location>
	</error-page>
	<error-page>
    	<!-- Unsupported servlet method -->
    	<error-code>503</error-code>
    	<location>/general-error.jsp</location>
	</error-page>
</web-app>